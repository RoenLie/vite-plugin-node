{
	"rootDir": "src",
	"compilerOptions": {
		"moduleResolution": "NodeNext",
		"strict": true,
		"declaration": true,
		"noUnusedLocals": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		// compile away optional-chaining-operator
		// node support table: https://node.green/#ES2020-features-optional-chaining-operator-----
		"target": "ES2022",
		"outDir": "./dist",
		"module": "NodeNext",
		"lib": [
			"ESNext",
			"dom"
		],
		"sourceMap": true
	}
}